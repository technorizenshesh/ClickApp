<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@mipmap/bg_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.notifications.NotificationsFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/border_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp">

            <RelativeLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/RR_tool"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                >

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/search_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:inputType="text"
                    android:textSize="@dimen/_16sdp"
                    android:text="Profile"
                    android:textStyle="bold"
                    android:textColor="@color/white" />



                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:inputType="text"
                    android:textSize="@dimen/_16sdp"
                    android:text="Profile"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_add_video"
                    android:layout_marginRight="10sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:inputType="text"
                    android:textSize="@dimen/_18sdp"
                    android:text="@string/add_video"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </RelativeLayout>



        <androidx.cardview.widget.CardView
            app:cardElevation = "16dp"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:layout_centerVertical="true"
            app:cardCornerRadius = "160dp"
            android:layout_alignParentLeft="true"
            android:foregroundGravity = "center"
            android:layout_centerInParent = "true"
            android:layout_width = "@dimen/_80sdp"
            android:layout_height = "@dimen/_80sdp">

            <ImageView
                android:id="@+id/rounded_user_image"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:scaleType="centerInside"
                android:src="@drawable/girl1"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="@dimen/_16sdp"
            android:text="John Rio"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="@dimen/_14sdp"
            android:text="@string/_97705_3114"
            android:textStyle="bold"
            android:textColor="@color/red" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            >
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:inputType="text"
                    android:textSize="@dimen/_16sdp"
                    android:text="Earning"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:inputType="text"
                    android:textSize="@dimen/_16sdp"
                    android:text="$3225"
                    android:textStyle="bold"
                    android:textColor="@color/mehroo" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:inputType="text"
                    android:textSize="@dimen/_16sdp"
                    android:text="Views"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:inputType="text"
                    android:textSize="@dimen/_16sdp"
                    android:text="1225"
                    android:textStyle="bold"
                    android:textColor="@color/mehroo" />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:scaleType="fitXY"
            android:layout_marginTop="20sp"
            android:src="@drawable/video_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            >
        </ImageView>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:inputType="text"
            android:textSize="@dimen/_16sdp"
            android:text="remove"
            android:textStyle="bold"
            android:textColor="@color/mehroo" />


        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center"
            android:id="@+id/lleditProfile"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/button_blue_20"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Edit Profile" />


        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/button_blue_20"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Memberships" />


        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/button_blue_20"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="My Booking" />

        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center"
            android:id="@+id/llReview"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/button_blue_20"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Write  Review" />


        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center"
            android:id="@+id/btnLogout"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/btn_border"
            android:textColor="@color/mehroo"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Log out" />

    </LinearLayout>

</ScrollView>


    </RelativeLayout>

</layout>
