<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:background="@mipmap/bg_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.notifications.NotificationsFragment">

        <RelativeLayout
            android:background="@drawable/border_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp">

            <RelativeLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/RR_tool"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                >

                <RelativeLayout
                    android:visibility="visible"
                    android:id="@+id/RRBack"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:src="@drawable/back_new"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp">

                    </ImageView>

                </RelativeLayout>

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/search_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:inputType="text"
                    android:textSize="@dimen/_16sdp"
                    android:text="Write Review"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_margin="@dimen/_30sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Nike Dri-FIT Long"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <RatingBar
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </RatingBar>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/edt_bg">

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint=""
                        android:text="Tell us your exprience "
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="30"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textColor="#b0b0b0"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:gravity="center"
                    android:id="@+id/lleditProfile"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/button_blue_20"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Send" />

            </LinearLayout>


        </ScrollView>


    </LinearLayout>

</layout>
