<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:background="@drawable/bg_one1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp">

                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/massage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                    </ImageView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp">

                        <RelativeLayout
                            android:id="@+id/RRback"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_centerInParent="true"
                                android:src="@mipmap/back"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                ></ImageView>

                        </RelativeLayout>


                        <TextView
                            android:textSize="@dimen/_16sdp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:text="Details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>


                    </RelativeLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="-30dp"
                    android:background="@drawable/button_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:background="@mipmap/bg_one"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AB Massage Theropists"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@mipmap/location"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1st Block 1st cross,Rammurthy nagar"
                                android:textColor="@color/mehroon"
                                android:textSize="@dimen/_14sdp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.2"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                />

                            <RatingBar
                                android:theme="@style/RatingBar"
                                android:rating="5"
                                android:id="@+id/indicator_ratingbar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_marginLeft="5dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="(182 Reviews)"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <TextView
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hey! My names jessica"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp"
                            />


                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I am a specialist massage therapist with 4 year experience specialisting in thai massage,hare is some more text to fill up space about his blurb here. simply dummy text of the printing and typesetting industry. Lorem ipsum has been the industry standarddummy"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp"
                            />

                        <TextView
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type of services"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:background="@drawable/border_line"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Massage"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14sdp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:background="@drawable/border_line"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Body Massage"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14sdp" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:background="@drawable/border_line"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hair Massage"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14sdp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:background="@drawable/border_line"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Full Body Massage"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14sdp" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:background="@drawable/border_line"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Foot Massage"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14sdp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:background="@drawable/border_line"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Body Massage"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14sdp" />

                            </RelativeLayout>

                        </LinearLayout>

                        <ImageView
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:scaleType="fitXY"
                            android:layout_marginTop="20sp"
                            android:src="@drawable/video_img"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            >
                        </ImageView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <LinearLayout
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:inputType="text"
                                    android:textSize="@dimen/_14sdp"
                                    android:text="2:00"
                                    android:textColor="@color/mehroo" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:layout_centerInParent="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:inputType="text"
                                    android:textSize="@dimen/_14sdp"
                                    android:text="101 views"
                                    android:textColor="@color/mehroo" />

                            </LinearLayout>

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/RR_Book"
                            android:background="@drawable/border_line_one"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_42sdp"
                            >

                            <TextView
                                android:paddingLeft="@dimen/_20sdp"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Book Now  "
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/back_arw"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                >

                            </ImageView>

                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>